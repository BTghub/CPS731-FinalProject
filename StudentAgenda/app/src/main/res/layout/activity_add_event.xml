<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEvent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingTop="25sp">
        <TextView
            android:id="@+id/tv_course_title"
            android:text="Title:"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_event_title"
            android:layout_width="200sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingTop="25sp">
        <TextView
            android:text="Location:"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"/>
        <EditText
            android:id="@+id/et_event_loc"
            android:layout_width="200sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingTop="25sp">
        <Button
            android:id="@+id/btn_startTime"
            android:text="Start Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"/>
        <TextView
            android:id="@+id/tv_startTime"
            android:textSize="25sp"
            android:paddingLeft="30sp"
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingTop="12.5sp">
        <Button
            android:id="@+id/btn_endTime"
            android:text="End Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"/>
        <TextView
            android:id="@+id/tv_endTime"
            android:textSize="25sp"
            android:paddingLeft="45sp"
            android:text="End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingTop="12.5sp">
        <Button
            android:id="@+id/btn_event_date"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"/>
        <TextView
            android:id="@+id/tv_event_date"
            android:paddingLeft="45sp"
            android:textSize="25sp"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:textSize="25sp"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/btn_event_submit"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:text="Submit"/>
    </RelativeLayout>


</LinearLayout>