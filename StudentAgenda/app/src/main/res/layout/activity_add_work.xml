<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWork"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingTop="25sp">
        <TextView
            android:textSize="25sp"
            android:id="@+id/tv_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Course:" />

        <Spinner
            android:id="@+id/sp_work_courseChoice"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingTop="25sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Homework:" />

        <Spinner
            android:id="@+id/sp_homeworkSelect"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingTop="25sp">
        <Button
            android:id="@+id/btn_work_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Date" />

        <TextView
            android:id="@+id/tv_work_date"
            android:textSize="25sp"
            android:paddingLeft="45sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25sp"
        android:paddingTop="25sp">
        <TextView
            android:id="@+id/tv_desc"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Description:" />

        <EditText
            android:id="@+id/et_work_description"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1" />
    </LinearLayout>

    <Button
        android:layout_marginLeft="25sp"
        android:id="@+id/btn_photo_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginTop="30dp"
        android:text="Import from image" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:textSize="25sp"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/btn_work_submit"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:text="Submit" />
    </RelativeLayout>

</LinearLayout>